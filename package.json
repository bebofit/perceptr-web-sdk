{
  "version": "0.0.10",
  "name": "@perceptr/web-sdk",
  "author": {
    "name": "Abdelrahman Soliman",
    "email": "bebofit@aucegypt.edu"
  },
  "description": "Perceptr Web SDK for recording and monitoring user sessions",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "sideEffects": false,
  "keywords": [
    "perceptr",
    "web-sdk",
    "user-session",
    "monitoring",
    "recording"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bebofit/perceptr-web-sdk.git"
  },
  "homepage": "https://github.com/bebofit/perceptr-web-sdk",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build": "npm run build:esm && npm run build:cjs"
  },
  "dependencies": {
    "@rrweb/rrweb-plugin-console-record": "^2.0.0-alpha.18",
    "axios": "^1.8.1",
    "rrweb": "^2.0.0-alpha.4",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
